{
  "manifest_version": 3,
  "name": "AI Translator Extension",
  "version": "1.0",
  "description": "Translate text using Chrome's built-in AI models.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
